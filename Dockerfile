#######################################
# Dockerfile to build a new image
######################################
# Base image is Ubuntu
FROM ubuntu
# Author: Vlatko Ristovski
MAINTAINER Vlatko Ristovski <ristovski.vlatko234@gmail.com>
# create 'mynewdir' and 'mynewfile'
RUN mkdir mynewdir && echo 'this is my new container to make image and then push to hub' > /mynewdir/mynewfile
# ru0 something stupid cmd
CMD echo 'Something stupid like I love you!'

